@model MegaMarketMall.Areas.Admin.ViewModels.LoginAdminViewModel
@{
    ViewData["Title"] = "Sign-in as Admin";
    Layout = "_Layout";
}
<div class="validation col-12" asp-validation-summary="ModelOnly"></div>
<form method="post" asp-action="Login" asp-controller="Auth" asp-area="Admin" class="col-4 justify-content-center">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group form-check">
    </div>
    <button type="submit" class="btn btn-primary">Login as Administrator</button>
</form>